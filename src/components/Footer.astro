---
import { Icon } from "astro-icon/components";
import siteInfo from "@data/site-info";

const { navLinks, socialLinks } = siteInfo;
---

<footer class="bg-white">
  <div class="mx-auto max-w-7xl overflow-hidden px-6 py-20 sm:py-24 lg:px-8">
    <nav
      class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6"
      aria-label="Footer"
    >
      {
        navLinks.map((link) => (
          <a href={link.href} class="text-gray-600 hover:text-gray-900">
            {link.name}
          </a>
        ))
      }
    </nav>
    <div class="mt-16 flex justify-center gap-x-10">
      {
        socialLinks.map((social) => (
          <a href={social.href} class="text-gray-600 hover:text-gray-800">
            <span class="sr-only">{social.name}</span>
            <Icon name={social.icon} class="size-6" aria-hidden="true" />
          </a>
        ))
      }
    </div>
    <p class="mt-10 text-center text-sm/6 text-gray-600">
      © 2025 BatterySolarQuotes™
    </p>
  </div>
</footer>
